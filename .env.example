# Environment variables for SQL Exporter
# Copy this file to .env and update with your actual values

# ==============================================
# EXPORTER CONFIGURATION
# ==============================================
EXPORTER_HOST=0.0.0.0
EXPORTER_PORT=9090
LOG_LEVEL=INFO
CONFIG_FILE=config/config.yaml

# ==============================================
# DATABASE CONNECTIONS
# ==============================================

# MySQL Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_username
MYSQL_PASS=your_password
MYSQL_DATABASE=your_database

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASS=your_password
POSTGRES_DATABASE=your_database

# SQL Server Database
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_USER=sa
MSSQL_PASS=your_password
MSSQL_DATABASE=your_database

# SQLite Database (file path)
SQLITE_DATABASE=./data/app.db

# ==============================================
# DOCKER COMPOSE CONFIGURATION
# ==============================================

# Grafana Configuration
GRAFANA_PASSWORD=admin

# ==============================================
# KUBERNETES CONFIGURATION
# ==============================================

# Kubernetes namespace
K8S_NAMESPACE=monitoring

# Service names in Kubernetes
POSTGRES_SERVICE_NAME=postgres-service
MYSQL_SERVICE_NAME=mysql-service

# Resource limits
MEMORY_REQUEST=64Mi
MEMORY_LIMIT=256Mi
CPU_REQUEST=100m
CPU_LIMIT=500m

# ==============================================
# MONITORING CONFIGURATION
# ==============================================

# Prometheus scraping configuration
PROMETHEUS_SCRAPE_INTERVAL=30s
PROMETHEUS_SCRAPE_TIMEOUT=10s

# Metrics endpoint
METRICS_PATH=/metrics

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Debug mode (for development)
DEBUG=false

# Docker registry (for K8s deployment)
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Build configuration
BUILD_ENV=production